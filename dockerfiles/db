FROM alpine:3.5

ENV LANG en_US.utf8

RUN apk add --no-cache postgresql

WORKDIR /var/lib/postgresql
ENV PGDATA=/var/lib/postgresql/data

COPY assets/setup.db.sh .
RUN su - postgres -c 'PGDATA='"${PGDATA}"' ./setup.db.sh' && rm setup.db.sh

USER postgres
VOLUME $PGDATA
EXPOSE 5432
CMD ["postgres", "-h", "*"]
